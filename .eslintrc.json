{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "always"],
    "camelcase": [
      "error",
      { "ignoreDestructuring": true, "properties": "never" }
    ],
    "comma-dangle": ["error", "es5"]
  }
}
