{
    "swagger": "2.0",
    "info": {
        "title": "Inoxoft Documentation",
        "version": "0.0.1",
        "description": "Inoxoft Course Node.js"
    },
    "paths": {
        "/users": {
            "get": {
                "tags": ["Users"],
                "description": "Get all users",
                "operationId": "getAllUsers",
                "parameters": [
                    {
                        "name": "perPage",
                        "in": "query",
                        "description": "How many items will be showed in one page",
                        "required": true,
                        "default": 20,
                        "example": 20,
                        "type": "number"
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "page number",
                        "required": true,
                        "default": 1,
                        "example": 1,
                        "type": "number"
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "order",
                        "required": false,
                        "default": "asc",
                        "example": "asc",
                        "type": "string"
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "email",
                        "required": false,
                        "default": "ivan@email.com",
                        "example": "ivan@email.com",
                        "type": "string"
                    },
                    {
                        "name": "role",
                        "in": "query",
                        "description": "role",
                        "required": false,
                        "default": "user",
                        "example": "user",
                        "type": "string"
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "description": "name",
                        "required": false,
                        "default": "Jack",
                        "example": "Jack",
                        "type": "string"
                    },
                    {
                        "name": "age.lte",
                        "in": "query",
                        "description": "Lower or equal value of age",
                        "required": false,
                        "default": 18,
                        "example": 18,
                        "type": "number"
                    },
                    {
                        "name": "age.gte",
                        "in": "query",
                        "description": "Greater or equal value of age",
                        "required": false,
                        "default": 18,
                        "example": 18,
                        "type": "number"
                    },
                    {
                        "name": "sortBy",
                        "in": "query",
                        "description": "Value for sorting",
                        "required": false,
                        "default": "createdAt",
                        "example": "createdAt",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "page": "1",
                                "limit": 1,
                                "count": 1,
                                "pageCount": 1,
                                "$ref": "#/definitions/User"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/ErrorSchema"
                        }
                    }
                }
            }
        },
        "/sighup": {
            "post": {
                "tags": ["Auth"],
                "description": "Create user",
                "operationId": "createUser",
                "parameters": [
                    {
                        "name": "name",
                        "in": "body",
                        "description": "Name of user",
                        "required": true,
                        "default": "Ivan",
                        "example": "Ivan",
                        "type": "string"
                    },
                    {
                        "name": "age",
                        "in": "body",
                        "description": "Age of user",
                        "required": true,
                        "default": 18,
                        "example": 18,
                        "type": "number"
                    },
                    {
                        "name": "email",
                        "in": "body",
                        "description": "Email of user",
                        "required": true,
                        "default": "ivan@email.com",
                        "example": "ivan@email.com",
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "body",
                        "description": "Password of user",
                        "required": true,
                        "default": "Password123",
                        "example": "Password123",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success response",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/ErrorSchema"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "_id": {
                    "description": "customer ID",
                    "type": "string",
                    "example": "1234exampleid"
                },
                "name": {
                    "description": "customer name",
                    "type": "string",
                    "example": "Igor"
                },
                "age": {
                    "description": "customer age",
                    "type": "number",
                    "example": "18"
                },
                "email": {
                    "description": "customer name",
                    "type": "string",
                    "example": "example@email.com"
                },
                "posts": {
                    "description": "customer posts",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ErrorSchema"
                    },
                    "example": [
                        {
                            "_id": "1234example",
                            "title": "Post title",
                            "content": "Post content",
                            "owner": "asdf123sdf"
                        }
                    ]
                },
                "role": {
                    "description": "customer role",
                    "type": "string",
                    "example": "user"
                },
                "confirmed": {
                    "description": "Did customer confirm signup from email message?",
                    "type": "boolean",
                    "example": false
                },
                "createdAt": {
                    "description": "Date when user created account",
                    "type": "string",
                    "example": "2020-01-01T20:50:55.086Z"
                },
                "updatedAt": {
                    "description": "Date when user updated account data",
                    "type": "string",
                    "example": "2020-01-01T20:50:55.086Z"
                }
            }
        },
        "Post": {
            "type": "object",
            "properties": {
                "_id": {
                    "description": "customer ID",
                    "type": "string",
                    "example": "1234exampleid"
                },
                "title": {
                    "description": "customer name",
                    "type": "string",
                    "example": "Igor"
                },
                "content": {
                    "description": "customer name",
                    "type": "string",
                    "example": "example@email.com"
                }
            }
        },
        "ErrorSchema": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Email is not valid"
                }
            }
        }
    }
}
